<p id="notice"><%= notice %></p>

<h1 class="page-header">
  Servicios
  <%= link_to new_servicio_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-plus"></span>
  Nuevo Servicio
  <% end %>
</h1>

<!-- Servicios -->
<div class="panel panel-default">
  <div class="panel-heading">
    Servicios
  </div>
  <div class="panel-body">
    <table id="tablaservicio" class="display responsive no-wrap">
      <thead>
        <tr>
          <th>Concepto</th>
          <th>M3</th>
          <th>Tarifa</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @servicios.each do |servicio| %>
        <tr>
          <td><%= servicio.concepto %></td>
          <td><%= number_with_delimiter(servicio.m3, delimiter: ".") %></td>
          <td><%= number_with_delimiter(servicio.tarifa, delimiter: ".") %></td>
          <td>
            <%= link_to servicio do %>
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true" title="Ver"></span>
            <% end %>
          </td>
          <td>
            <%= link_to edit_servicio_path(servicio) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true" title="Editar"></span>
            <% end %>
          </td>
          <td>
            <%= link_to servicio, method: :delete, data: { title: 'Eliminar servicio', confirm:'Â¿Quieres eliminar este servicio?', commit: 'Eliminar', cancel: 'Cancelar' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true" title="Eliminar"></span>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!--End Sercicios -->

<script type="text/javascript">

$(document).on('turbolinks:load', function() {

  $('#tablaservicio').DataTable({
    responsive: true,
    destroy: true,
    dom: 'Bfrtip',
    lengthMenu: [
    [ 10, 25, 50, -1 ],
    [ '10 rows', '25 rows', '50 rows', 'Show all' ]
    ],
    buttons: [
    'pageLength', 'copy', 'csv', 'excel', 'pdf', 'print'
    ]
  });
  
  $('div#tablaservicio_filter input').addClass('form-control input-sm input-width');

});

</script>
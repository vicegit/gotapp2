<%= form_for(lectura) do |f| %>
  <% if lectura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lectura.errors.count, "error") %> prohibited this lectura from being saved:</h2>

      <ul>
      <% lectura.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      Lecturas
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :medidor_id, "Medidor *", class: "control-label" %>
            <%= f.number_field :medidor_id, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :periodo_id, "Periodo *", class: "control-label" %>
            <%= f.number_field :periodo_id, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :fecha, class: "control-label" %>
            <%= f.date_field :fecha, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :lector, class: "control-label" %>
            <%= f.text_field :lector, class: "form-control uppercase" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :actual, "Actual *",class: "control-label" %>
            <%= f.number_field :actual, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6"> 
          <div class="form-group">
            <%= f.label :consumo, class: "control-label" %>
            <%= f.number_field :consumo, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :exceso, class: "control-label" %>
            <%= f.number_field :exceso, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn btn-default'%>
        <%= link_to "Cancelar", lecturas_path, class: "btn btn-default" %>
      </div>
      
    </div>
  </div>
<% end %>
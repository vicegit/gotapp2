<p id="notice"><%= notice %></p>

<h1>Lecturas</h1>

<table>
  <thead>
    <tr>
      <th>Medidor</th>
      <th>Periodo</th>
      <th>Fecha</th>
      <th>Lector</th>
      <th>Actual</th>
      <th>Consumo</th>
      <th>Exceso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lecturas.each do |lectura| %>
      <tr>
        <td><%= lectura.medidor_id %></td>
        <td><%= lectura.periodo_id %></td>
        <td><%= lectura.fecha %></td>
        <td><%= lectura.lector %></td>
        <td><%= lectura.actual %></td>
        <td><%= lectura.consumo %></td>
        <td><%= lectura.exceso %></td>
        <td><%= link_to 'Show', lectura %></td>
        <td><%= link_to 'Edit', edit_lectura_path(lectura) %></td>
        <td><%= link_to 'Destroy', lectura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


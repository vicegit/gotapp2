<%= form_for(factura, html: { id: "factura_id"}) do |f| %>
  <% if factura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(factura.errors.count, "error") %> prohibited this factura from being saved:</h2>

      <ul>
      <% factura.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="panel panel-default">
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :cliente_id , "Cliente *", class: "control-label" %>
            <%= f.number_field :cliente_id, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :periodo_id, "Periodo *", class: "control-label" %>
            <%= f.number_field :periodo_id, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :condicion, "Condición *", class: "control-label" %>
            <%= f.text_field :condicion, class: "form-control uppercase" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :fecha, "Fecha *",class: "control-label" %>
            <%= f.date_field :fecha, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :iva, "Iva *", class: "control-label" %>
            <%= f.number_field :iva, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6"> 
          <div class="form-group">
            <%= f.label :erssan, "Erssan *", class: "control-label" %>
            <%= f.number_field :erssan, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :total, "Total *", class: "control-label" %>
            <%= f.number_field :total, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit class: 'btn btn-default'%>
        <%= link_to "Cancelar", "", type: "reset", class: "btn btn-default" %>
        <%= link_to "Atrás", facturas_path, class: "btn btn-default" %>
      </div>
      
    </div>
  </div>
<% end %>

<script type="text/javascript">

$(document).on('turbolinks:load', function() {
  $('#factura_id').bootstrapValidator({
    framework: 'bootstrap',
    feedbackIcons: {
      valid: 'glyphicon glyphicon-ok',
      invalid: 'glyphicon glyphicon-remove',
      validating: 'glyphicon glyphicon-refresh'
    },
    fields: {
      'factura[cliente_id]': {
        trigger: 'blur',
        validators: {
          integer: {
            message: 'No es un número'
          },
          notEmpty: {
            message: 'El cliente es requerido'
          },
          stringLength: {
                          min: 1,
                          max: 7,
                          message: 'El cliente debe tener entre 1 y 7 caractéres'
          }
        }
      },
      'factura[periodo_id]': {
        trigger: 'blur',
        validators: {
          integer: {
            message: 'No es un número'
          },
          notEmpty: {
            message: 'El periodo es requerido'
          },
          stringLength: {
                          min: 1,
                          max: 7,
                          message: 'El periodo debe tener entre 1 y 7 caractéres'
          }
        }
      },
      'factura[condicion]': {
        trigger: 'blur',
        validators: {
          notEmpty: {
            message: 'La condición es requerida'
          },
          stringLength: {
                          min: 3,
                          max: 7,
                          message: 'La condición debe tener entre 3 y 7 caractéres'
          }
        }
      },
      'factura[fecha]': {
        trigger: 'blur',
        validators: {
          notEmpty: {
            message: 'La fecha es requerida'
          }
        }
      },
      'factura[iva]': {
        trigger: 'blur',
        validators: {
          integer: {
            message: 'No es un número'
          },
          notEmpty: {
            message: 'El iva es requerido'
          },
          stringLength: {
                          min: 3,
                          max: 7,
                          message: 'El iva debe tener entre 3 y 7 caractéres'
          }
        }
      },
      'factura[erssan]': {
        trigger: 'blur',
        validators: {
          integer: {
            message: 'No es un número'
          },
          notEmpty: {
            message: 'El erssan es requerido'
          },
          stringLength: {
                          min: 3,
                          max: 7,
                          message: 'El erssan debe tener entre 3 y 7 caractéres'
          }
        }
      },
      'factura[total]': {
        trigger: 'blur',
        validators: {
          integer: {
            message: 'No es un número'
          },
          notEmpty: {
            message: 'El total es requerido'
          },
          stringLength: {
                          min: 3,
                          max: 7,
                          message: 'El total debe tener entre 3 y 7 caractéres'
          }
        }
      }
    }  
  });
});

</script>
          <% else %>
            INACTIVO
          <% end %>
        </p>
      </div>
      <div class="col-md-6">
    	 <p>
  			 <strong>Saldo:</strong>
         <%= number_with_delimiter(@ctactecli.saldo, delimiter: ".") %>
		    </p>
      </div>
    </div>
  </div>
</div>
      </div>
      
    </div>
  </div>
<% end %>

<script type="text/javascript">

$(document).on('turbolinks:load', function() {
  $('#periodo_id').bootstrapValidator({
    framework: 'bootstrap',
    feedbackIcons: {
      valid: 'glyphicon glyphicon-ok',
      invalid: 'glyphicon glyphicon-remove',
      validating: 'glyphicon glyphicon-refresh'
    },
    fields: {
      'periodo[periodo]': {
        trigger: 'blur',
        validators: {
          notEmpty: {
            message: 'El periodo es requerido'
          }
        }
      },
      'periodo[fecha_vencimiento]': {
        trigger: 'blur',
        validators: {
          notEmpty: {
            message: 'La fecha de vencimiento es requerida'
          }
        }
      }
    }  
  });
});

</script>
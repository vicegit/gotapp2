<!DOCTYPE html>
<html>
<head>
  <title>Gotapp</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <% unless flash.empty? %>
    <script type="text/javascript">
      <% flash.each do |f| %>
        <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
          toastr['<%= type %>']('<%= f[1] %>');
      <% end %>
    </script>
  <% end %>

  <div id="wrapper">
    <nav class="navbar navbar-default top-navbar"  role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Gotapp</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="navbar-collapse">
        <ul class="nav navbar-top-links navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-user"></i><span class="caret"></span></a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Completar</a></li>
              <li><a href="#">Completar</a></li>
              <li><a href="#">Completar</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#"><i class="glyphicon glyphicon-log-out"></i> Logout</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>

    
    <!--/. NAV TOP  -->
    <nav class="navbar-default navbar-side" role="navigation">
      <div class="sidebar-collapse">
        <ul class="nav" id="main-menu">
          <li class="<%= 'active-menu' if current_page?(medidors_path) %>">
            <%= link_to medidors_path do %>
            <span class="glyphicon glyphicon-tint" aria-hidden="true"></span>
            Medidores
            <% end %>
          </li>
          <li class="<%= 'active-menu' if current_page?(clientes_path) %>">
            <%= link_to clientes_path do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            Clientes
            <% end %>
          </li>
          <li class="<%= 'active-menu' if current_page?(periodos_path) %>">
            <%= link_to periodos_path do %>
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
            Periodos
            <% end %>
          </li>
          <li class="<%= 'active-menu' if current_page?(lecturas_path) %>">
            <%= link_to lecturas_path do %>
            <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>
            Lecturas
            <% end %>
          </li>
          <li class="<%= 'active-menu' if current_page?(servicios_path) %>">
            <%= link_to servicios_path do %>
            <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
            Servicios
            <% end %>
          </li>
          <li class="<%= 'active-menu' if current_page?(facturas_path) %>">
            <%= link_to facturas_path do %>
            <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
            Facturas
            <% end %>
          </li>
          <li class="<%= 'active-menu' if current_page?(ctacteclis_path) %>">
            <%= link_to ctacteclis_path do %>
            <span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span>
            Cuenta Corriente Cliente
            <% end %>
          </li>
          <li>
            <%= link_to  do %>
            <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
            Pagos
            <% end %>
          </li>
          <li>
            <%= link_to  do %>
            <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
            Reportes
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper" >
      <div id="page-inner">
        <div class="row">
          <div class="col-md-12">
            <%= yield %>
          </div>
        </div>
        <!-- /. ROW  -->
        <footer><p>Universidad Autónoma de Encarnación - Sistema de Gestión para una Aguatería - Vicente Esteche, 2017.</p></footer>
      </div>
      <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
  </div>
  <!-- /. WRAPPER  -->

</body>
</html>
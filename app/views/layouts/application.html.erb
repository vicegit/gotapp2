            <% end %>
          </li>
          <li>
            <%= link_to facturas_path do %>
              <span class="glyphicon glyphicon-barcode" aria-hidden="true"></span>
              Facturas
            <% end %>
          </li>
          <li>
            <%= link_to ctacteclis_path do %>
              <span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span>
              Cuenta Corriente Cliente
            <% end %>
          </li>
          <li>
            <%= link_to  do %>
              <span class="glyphicon glyphicon-usd" aria-hidden="true"></span>
              Pagos
            <% end %>
          </li>
          <li>
            <%= link_to  do %>
              <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
              Reportes
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    
    <!-- /. NAV SIDE  -->
    <div id="page-wrapper" >
      <div id="page-inner">
        <div class="row">
          <div class="col-md-12">
            <%= yield %>
          </div>
        </div>
        <!-- /. ROW  -->
        <footer><p>Universidad Autónoma de Encarnación - Sistema de Gestión para una Aguatería - Vicente Esteche, 2017.</p></footer>
      </div>
      <!-- /. PAGE INNER  -->
    </div>
    <!-- /. PAGE WRAPPER  -->
  </div>
  <!-- /. WRAPPER  -->

